<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
    </style>

    <style name="PreferenceThemeOverlay.v14" tools:ignore="PrivateResource">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="optionsMenuStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

</resources>
